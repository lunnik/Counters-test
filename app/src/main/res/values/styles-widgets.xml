<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Button-->
    <style name="AppTheme.Button.Solid">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:paddingEnd">@dimen/button_padding_lateral</item>
        <item name="android:paddingStart">@dimen/button_padding_lateral</item>
        <item name="android:paddingTop">@dimen/button_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/button_padding_vertical</item>
        <item name="android:backgroundTint">@color/orange</item>
    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white</item>
    </style>

    <!-- TEXT VIEW -->
    <style name="TextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.TextView.Title" parent="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.TextView.Content" parent="TextView">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!-- PROGRESS BAR  -->
    <style name="AppTheme.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:progressBackgroundTint">@color/orange</item>
        <item name="android:indeterminateTint">@color/orange</item>
        <item name="android:progressTint">@color/orange</item>
    </style>

    <style name="Theme.Dialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="buttonBarNegativeButtonStyle">@style/Theme.Dialog.Button</item>
        <item name="buttonBarPositiveButtonStyle">@style/Theme.Dialog.Button</item>
    </style>

    <style name="Theme.Dialog.Button" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>